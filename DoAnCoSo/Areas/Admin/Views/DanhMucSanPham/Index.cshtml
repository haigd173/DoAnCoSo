@model IEnumerable<DoAnCoSo.Context.DanhMucSanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">DANH MỤC NHÓM CỦA SẢN PHẨM</h2>

<p class="btn" style="margin-left:400px; padding:4px; background-color:aqua; color:black">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table container">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Avatar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Slug)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShowOnHomePage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayOrder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deleted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateOnUtc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdateOnUtc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        <img width="200px" src="@item.Avatar" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Slug)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ShowOnHomePage)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DisplayOrder)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Deleted)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CreateOnUtc)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UpdateOnUtc)
    <th>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
    </th>
    <th>
        @Html.ActionLink("Detail", "Detail", new { id = item.Id })
    </th>
    <th>
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </th>
    </td>
</tr>
}

</table>
